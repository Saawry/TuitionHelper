<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:context=".Activities.UserProfile">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="170dp">

            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/userImageIV"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@color/white" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_card"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_stroke_teal"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:text="Name:" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv1"
                android:padding="5dp" />

            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/input_name"
                android:background="@color/teal_700" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_stroke_teal"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:text="Mobile:" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/input_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/tv2"
                android:padding="5dp" />

            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/input_mobile"
                android:background="@color/teal_700" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay2"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_stroke_teal"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:text="Address:" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/tv3"
                android:padding="5dp" />

            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/input_address"
                android:background="@color/teal_700" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay3"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_stroke_teal"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:text="Email:" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/tv4"
                android:padding="5dp" />

            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/input_email"
                android:background="@color/teal_700" />
        </RelativeLayout>

        <Button
            android:id="@+id/signoutBtn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/lay4"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_background_round"
            android:text="Sign Out"
            android:textColor="@color/white" />
    </RelativeLayout>


</layout>
